@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center mb-3">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>
<a class="btn btn-primary d-block mb-2" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger d-block" role="button" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar">Confirmar Exclusão</a>

