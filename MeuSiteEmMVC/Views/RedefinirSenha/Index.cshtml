@model RedefinirSenhaModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Alterar senha do usuário";
}

 @if(TempData["MensagemSucesso"] != null)
    {
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
    }

    @if(TempData["MensagemErro"] != null)
    {
    <div class="alert alert-danger" role="alert">
         <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
    }

<h1>Alterar senha do usuário</h1>

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
  


  <div class="form-group">
    <label for="login" class="form-label mt-3">Login</label>
    <input type="text" asp-for="Login" class="form-control " placeholder="Digite a login do usuário"/>
    @Html.ValidationMessageFor(x => x.Login)
  </div>

   <div class="form-group">
    <label for="email" class="form-label mt-3">Email</label>
    <input type="text" asp-for="Email" class=" form-control" placeholder="Confirme a nova senha do usuário"/>
    @Html.ValidationMessageFor(x => x.Email)
  </div>


 
  <button type="submit" class="btn btn-primary col-12 mb-2 mt-4">Redefinir senha</button>
  <a class="btn btn-secondary col-12" asp-controller="Login" asp-action="Index" role="button">Voltar</a>

</form>
